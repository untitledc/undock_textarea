{
    "name": "Textarea Life-off",
    "version": "0.9.0",
    "manifest_version": 2,

    "description": "Lift off the textarea.  Make it movable and always stay in the view",
    "icons": {
        "16": "resources/images/icon16.ico",
        "48": "resources/images/icon48.ico",
        "128": "resources/images/icon128.ico"
    },

    "content_scripts": [
        { 
            "matches": ["<all_urls>"],
            "js": ["lib/jquery-1.8.3.min.js", "scripts/content.js"],
            "css": ["css/content.css"],
            "all_frames": true
        }
    ]
}
